                            \addplot[soliddot] coordinates {(3,7.1411) (3.14,7.28)};
                            \draw (axis cs:0.5,1.2) node {\scriptsize $f(x)$};
                            \draw (axis cs:0.5,5) node {\scriptsize $l(x)$};
                    \end{axis}



