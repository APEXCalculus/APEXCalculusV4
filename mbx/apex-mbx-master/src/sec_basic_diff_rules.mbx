              my @words = split (/ /, $student);
              $words[0] =~ s/^~~W+|~~W+$//g;
              $words[1] =~ s/^~~W+|~~W+$//g;
              $words[2] =~ s/^~~W+|~~W+$//g;
              return ($#words &lt;= 2 and ((uc($words[0]) eq 'POWER' and uc($words[1]) eq 'RULE') or (uc($words[0]) eq 'THE' and uc($words[1]) eq 'POWER' and uc($words[2]) eq 'RULE')));
              });
            </pg-code>
          </setup>
